@page
@using EventManagement.WebRazorPages.Extensions;
@model EventManagement.WebRazorPages.Pages.Events.EditModel

<div class="row">
    <div class="col-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                <h3>Edit</h3>
            </div>
            <div class="card-body">
                <div class="col-md-4 mx-auto">
                    <form asp-page="Edit">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input asp-for="EventEditModel.EventId" type="hidden" />
                        <div class="form-group">
                            <label asp-for="EventEditModel.Address" class="control-label"></label>
                            <input asp-for="EventEditModel.Address" class="form-control" />
                            <span asp-validation-for="EventEditModel.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventEditModel.ParticipantLimit" class="control-label"></label>
                            <input asp-for="EventEditModel.ParticipantLimit" class="form-control" />
                            <span asp-validation-for="EventEditModel.ParticipantLimit" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        @Html.ShowSwalSuccessMessage(TempData);
    }
}