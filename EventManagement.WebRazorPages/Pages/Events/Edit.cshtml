@page
@model EventManagement.WebRazorPages.Pages.Events.EditModel
@{
}
<div class="row">
    <div class="col-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                <h3>Edit</h3>
            </div>
            <div class="card-body">
                <div class="col-md-4">
                    <form asp-page="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="EventDto.EventId" type="hidden" />
                        <div class="form-group">
                            <label asp-for="EventDto.Name" class="control-label"></label>
                            <input asp-for="EventDto.Name" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="EventDto.Address" class="control-label"></label>
                            <input asp-for="EventDto.Address" class="form-control" />
                            <span asp-validation-for="EventDto.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventDto.Description" class="control-label"></label>
                            <input asp-for="EventDto.Description" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="EventDto.Start" class="control-label"></label>
                            <input asp-for="EventDto.Start" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="EventDto.ApplicationDeadline" class="control-label"></label>
                            <input asp-for="EventDto.ApplicationDeadline" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="EventDto.ParticipantLimit" class="control-label"></label>
                            <input asp-for="EventDto.ParticipantLimit" class="form-control" />
                            <span asp-validation-for="EventDto.ParticipantLimit" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }