@using EventManagement.WebRazorPages.Pages.Events.Models;
@model IEnumerable<CategoryFilterDto>

<h2 class="accordion-header" id="headingCategory">
    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#categoryCollapse" aria-expanded="false" aria-controls="categoryCollapse">
        Categories
    </button>
</h2>
<div id="categoryCollapse" class="accordion-collapse collapse" aria-labelledby="headingCategory" data-bs-parent="#filters">
    <div class="accordion-body">
        <div class="form-check">
            <ul class="list-group list-group-flush">
                @foreach (CategoryFilterDto categoryDto in Model)
                {
                    <li class="list-group-item">
                        <input name="Categories" type="checkbox" class="form-check-input" value="@categoryDto.Id" @Html.Raw(categoryDto.Selected ? "checked" : string.Empty ) />
                        <label for="Categories" class="form-check-label">@categoryDto.Name</label>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>