@using EventManagement.WebRazorPages.Pages.Events.Models;
@model IEnumerable<CityFilterDto>

<h2 class="accordion-header" id="headingCity">
    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#cityCollapse" aria-expanded="false" aria-controls="cityCollapse">
        Cities
    </button>
</h2>
<div id="cityCollapse" class="accordion-collapse collapse" aria-labelledby="headingCity" data-bs-parent="#filters">
    <div class="accordion-body">
        <div class="form-check">
            <ul class="list-group list-group-flush">
                @foreach (CityFilterDto cityDto in Model)
                {
                    <li class="list-group-item">
                        <input name="Cities" type="checkbox" class="form-check-input" value="@cityDto.Id" @Html.Raw(cityDto.Selected ? "checked" : string.Empty )/>
                        <label for="Cities" class="form-check-label">@cityDto.Name</label>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
