@page
@using System.Security.Claims
@using EventManagement.WebRazorPages.Extensions;
@model EventManagement.WebRazorPages.Pages.Events.DetailsModel

<div class="card mx-auto">
    <div class="card-header text-center">
        <h3>Details</h3>
    </div>
    <div class="card-body">
        <div>
            <h4>@Model.EventModel.Name</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventModel.EventId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventModel.EventId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventModel.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventModel.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventModel.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventModel.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventModel.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventModel.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventModel.Start)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventModel.Start)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventModel.ApplicationDeadline)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventModel.ApplicationDeadline)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventModel.ParticipantLimit)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventModel.ParticipantLimit)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventModel.User)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventModel.User)
                </dd>
            </dl>
        </div>
        @if (((Model.EventModel.Start - DateTime.Now).TotalDays > 5) &&
        Convert.ToInt32(User.Claims.Where(c => c.Type == ClaimTypes.NameIdentifier).First().Value) == Model.EventModel.UserId)
        {
            <div>
                <a asp-page="Edit" asp-route-id="@Model.EventModel.EventId" class="btn btn-primary">Edit</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Html.ShowSwalFailureMessage(TempData);
}