@page
@using EventManagement.WebRazorPages.Extensions;
@model EventManagement.WebRazorPages.Pages.Categories.EditModel
@{
}
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                <h3>Edit</h3>
            </div>
            <div class="card-body">
                <form asp-page="Edit" asp-route-id="@Model.Id" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        @Html.ShowSwalSuccessMessage(TempData, Url.Page("./Index"))
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}