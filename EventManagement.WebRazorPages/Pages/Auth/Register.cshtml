@page
@using EventManagement.WebRazorPages.Extensions;
@model EventManagement.WebRazorPages.Pages.Auth.RegisterModel
@{
}
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                <h3>Register</h3>
            </div>
            <div class="card-body">
                <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="success" data-ajax-dataType="html" data-ajax-failure="failure" data-ajax-button="#submitButton">
                    <div id="registerForm">
                        <partial name="RegisterForm" model="Model" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" id="submitButton" data-loading-text="Loading..." data-text="Register">
                            Register
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        success = (data) => {
            var parsed = JSON.parse(data);
            fireDialogRedirectOnClose("Success", parsed.message, "success", parsed.redirectUrl);
        };
        failure = (xhr) => {
            if (xhr.status === 400)
                $('#registerForm').html(xhr.responseText);
            else if (xhr.status == 401)
                window.location = @Html.Raw($"\"{Url.Page("/Auth/Login")}\"");
            else if (xhr.status == 403)
                window.location = @Html.Raw($"\"{Url.Page("/Auth/Forbidden")}\"");
            else
                fireDialog("Something went wrong", "Something went wrong while processing your request please try again.", "error");
        };
    </script>
}