@page
@model EventManagement.WebRazorPages.Pages.Profile.ChangePasswordModel
@{
}
<div class="row">
    <div class="col-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                <h3>Change Password</h3>
            </div>
            <div class="card-body">
                <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="success" data-ajax-dataType="html" data-ajax-failure="failure" data-ajax-button="#submitButton">
                    <div id="partialForm">
                        <partial name="ChangePasswordForm" model="Model" />
                    </div>
                    <div class="form-group mt-3 text-center">
                        <button type="submit" class="btn btn-primary" id="submitButton" data-loading-text="Loading..." data-text="Change Password">
                            Change Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_UnobtrusiveAjax");
    }
}